<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="385dp"
    android:layout_gravity="center"
    android:background="#eeeeee"
    android:backgroundTint="#eeeeee"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:backgroundTint="#eeeeee"
        android:orientation="vertical">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:fitsSystemWindows="false"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            </com.daimajia.slider.library.SliderLayout>

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="355dp"
                android:background="@color/cardview_shadow_end_color"
                android:gravity="bottom|center_vertical|center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                app:padding_bottom="4dp"
                app:padding_left="3dp"
                app:padding_right="3dp"
                app:padding_top="4dp"
                app:selected_color="#f60"
                app:selected_height="6dp"
                app:selected_width="6dp"
                app:shape="oval"
                app:unselected_color="#ffffff"
                app:unselected_height="6dp"
                app:unselected_width="6dp" />


        </android.support.design.widget.CollapsingToolbarLayout>
    </LinearLayout>
</RelativeLayout>
