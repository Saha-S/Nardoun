<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5A2456</item>
        <item name="colorPrimaryDark">#371635</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:typeface">serif</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextAppearance.DeviceDefault.Widget.TabWidget" parent="TextAppearance.DeviceDefault.Widget.TabWidget">
        <item name="android:typeface">serif</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="NavigationViewStyle">
        <item name="android:listPreferredItemHeightSmall">55dp</item><!-- menu item height-->
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
    </style>
</resources>
