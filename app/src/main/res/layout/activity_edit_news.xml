<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:noHistory = "true">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_new_agahi"
            android:layout_width="match_parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ll_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|right"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:alwaysDrawnWithCache="true"
                    android:background="#fff">

                    <EditText
                        android:id="@+id/edt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="عنوان خبر"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:singleLine="true"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/ll_news_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:paddingTop="10dp"
                    >

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عکس خبر"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/news_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:srcCompat="@mipmap/nopic" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:text="لطفا موضوع خبر را مشخص کنید"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="موضوع خبر: "
                    android:textColor="#3d3d3d"
                    android:textSize="14sp" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:alwaysDrawnWithCache="true"
                android:background="#fff">

                <EditText
                    android:id="@+id/edt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="right"
                    android:hint="متن خبر"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_img_asli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:text="لطفا عکس اصلی را انتخاب کنید"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:text="عکس های متن"
                    android:textColor="#3d3d3d"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_select"
                    android:padding="5dp"
                    android:text="افزودن عکس"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/img2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del5"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del6"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del7"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage7"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/img8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:background="#c1c1c1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/img_del8"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="top|left"
                                app:srcCompat="@mipmap/imgdelete" />

                            <ImageView
                                android:id="@+id/ivImage8"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@mipmap/nopic" />
                        </LinearLayout>


                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    </ScrollView>

</LinearLayout>
