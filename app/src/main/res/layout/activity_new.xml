<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_new_agahi"
             />

    <View android:layout_width="match_parent"
        android:layout_height="5dp" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appmagazine.nardoon.activities.New"
        android:background="?attr/colorButtonNormal">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent">


                    <TextView
                        android:text="لطفا موضوع آگهی را انتخاب کنید."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:text="موضوع آگهی"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:textColor="#3d3d3d" />

                    <Button
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_cats"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#5A2456"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:text="انتخاب" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_form"
                    android:visibility="invisible">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:weightSum="1">


                        <TextView
                            android:text="لطفا قیمت را انتخاب کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_cats"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:text="انتخاب"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.30" />

                            <TextView
                                android:text="قیمت"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:textColor="#3d3d3d"
                                android:layout_width="wrap_content"
                                android:layout_weight="1.40" />
                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="1000000 (یک میلیون تومان)"
                            android:ems="10"
                            android:id="@+id/edt_price" />

                    </LinearLayout>

                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                        android:gravity="right"
                        android:weightSum="1">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <TextView
                                android:text="نوع"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:textColor="#3d3d3d"
                                android:layout_width="wrap_content"
                                android:layout_weight="1.40" />

                            <RadioButton
                                android:text="فروشی"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton2"
                                android:layout_weight="1.40" />

                            <RadioButton
                                android:text="درخواستی"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/radioButton"
                                android:layout_weight="1.40" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="انتخاب عکس برای آگهی باعث بیشتر دیده شدن آن میشود"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/cardview_shadow_start_color"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="عکس"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <Button
                            android:layout_width="144dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_cats"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#5A2456"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:text="افزودن عکس" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="ایمیل"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="x@x.com"
                            android:ems="10"
                            android:id="@+id/edt_email" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="تلفن"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text="0912123456"
                            android:ems="10"
                            android:id="@+id/edt_phone" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="محل آگهی"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <Button
                            android:layout_width="144dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_location"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#5A2456"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:text="انتخاب محل" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="عنوان"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/edt_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="توضیح"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/edt_content" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>
