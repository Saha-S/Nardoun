<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:noHistory = "true">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar_new_agahi"
             />

    <View android:layout_width="match_parent"
        android:layout_height="5dp" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.appmagazine.nardoon.activities.NewAgahi"
        android:background="?attr/colorButtonNormal">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll"
            android:isScrollContainer="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent">


                    <TextView
                        android:text="لطفا موضوع آگهی را انتخاب کنید."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_cat"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp" />

                    <TextView
                        android:text="موضوع آگهی"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="10dp"
                        android:textSize="18sp"
                        android:textColor="#3d3d3d" />

                    <Button
                        android:layout_width="144dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_cats"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="#5A2456"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:text="انتخاب" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_form"
                    android:visibility="gone">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:weightSum="1">


                        <TextView
                            android:text="لطفا قیمت را انتخاب کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_cats"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/cardview_shadow_start_color"
                                android:textColor="#fff"
                                android:textSize="18sp"
                                android:text="انتخاب"
                                android:layout_width="wrap_content"
                                android:layout_weight="0.30" />

                            <TextView
                                android:text="قیمت"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:textColor="#3d3d3d"
                                android:layout_width="wrap_content"
                                android:layout_weight="1.40" />
                        </LinearLayout>

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/edt_price"
                            android:hint="1000000 (یک میلیون تومان)"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_height="match_parent"
                        android:gravity="right"
                        android:weightSum="1">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right">

                            <TextView
                                android:text="نوع"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="10dp"
                                android:textSize="18sp"
                                android:textColor="#3d3d3d"
                                android:layout_width="wrap_content"
                                android:layout_weight="1.40" />
                            <TextView
                                android:text="لطفا نوع آگهی را مشخص کنید"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/txt_type"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@android:color/holo_red_dark"
                                android:layout_marginTop="6dp"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"
                                android:textSize="14sp" />
                            <RadioGroup
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textView"
                                android:weightSum="1"
                                android:id="@+id/radioType"
                                android:textColor="#010101"
                                android:padding="10dp">
                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rb1"
                                    android:checked="false"
                                    android:text="فروشی" />
                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/rb2"
                                    android:checked="false"
                                    android:text="درخواستی" />

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="انتخاب عکس برای آگهی باعث بیشتر دیده شدن آن میشود"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp" />

                        <TextView
                            android:text="عکس"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <Button
                            android:layout_width="144dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_select_image"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#5A2456"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:text="افزودن عکس" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                app:srcCompat="@mipmap/nopic"
                                android:id="@+id/ivImage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="لطفا ایمیل خود را وارد کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:text="ایمیل"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:ems="10"
                            android:id="@+id/edt_email"
                            android:hint="x@x.com"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="لطفا شماره تلفن خود را وارد کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_mobile"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:text="تلفن"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/edt_phone"
                            android:hint="09121234567"
                            android:inputType="phone" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="لطفا محل آگهی را انتخاب کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_location"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:text="محل آگهی"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <Button
                            android:layout_width="144dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_location"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="#5A2456"
                            android:textColor="#fff"
                            android:textSize="18sp"
                            android:text="انتخاب محل" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="لطفا عنوان آگهی را وارد کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_title"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:text="عنوان"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/edt_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:text="لطفا متن آگهی را وارد کنید"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@android:color/holo_red_dark"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:visibility="gone"
                            android:textSize="14sp" />
                        <TextView
                            android:text="توضیح"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="10dp"
                            android:textSize="18sp"
                            android:textColor="#3d3d3d" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:id="@+id/edt_content"
                            android:inputType="textMultiLine" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>
