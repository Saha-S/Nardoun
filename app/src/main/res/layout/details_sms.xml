<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="right">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer"
        android:fitsSystemWindows="false" />

    <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:weightSum="10"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true">

   <include
       android:layout_width="match_parent"
       layout="@layout/app_bar_sms"
       android:layout_above="@+id/ll_Filter"
       android:layout_weight="0.30"
       android:layout_height="44dp" />
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="5">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:id="@+id/edt_content"
             android:hint="متن پیامک را وارد نمایید."
             android:padding="10dp"
             android:layout_margin="40dp"
             android:inputType="textMultiLine" />

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:id="@+id/edt_mobile"
             android:inputType="textPhonetic|phone"
             android:hint="شماره موبایل"
             android:padding="10dp"
             android:layout_marginLeft="40dp"
             android:layout_marginRight="40dp" />
      </LinearLayout>


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right|center_vertical"
          android:weightSum="2"
          android:layout_weight="4.7"
          android:padding="20dp">


         <Button
             android:text="ارسال انبوه"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:id="@+id/btn_send"
             android:layout_weight="1"
             android:background="@color/colorPrimary"
             android:textColor="#fff"
             android:layout_margin="5dp"
             android:onClick="open"
             />
         <Button
             android:text="تست ارسال"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:id="@+id/btn_test"
             android:layout_weight="1"
             android:background="@color/colorPrimary"
             android:textColor="#fff"
             android:layout_margin="5dp"
             android:onClick="webServiceTestSMS"/>
      </LinearLayout>


   </LinearLayout>

</android.support.v4.widget.DrawerLayout>
